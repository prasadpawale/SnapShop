    <script type="text/javascript">
        $(window).on("scroll", function () {
            $('#divCategory1').hide();
            $('#divCategory').hide();
            if ($(this).scrollTop() > 235) {
                $(".header").addClass('unhide');
                $(".headerSearchControl").removeClass('tempHide');
                $(".headerLogoText").removeClass('tempHide');
                $("#topNavCategory > #navbar").removeClass('tempHide');

            }
            else {
                $(".header").removeClass('unhide');
                $(".headerSearchControl").addClass('tempHide');
                $(".headerLogoText").addClass('tempHide');
                $("#topNavCategory > #navbar").addClass('tempHide');
            }

            if ($(this).scrollTop() > 260) {               
                $("#topNavCategory > #navbar").removeClass('tempHide');

            }
            else {               
                $("#topNavCategory > #navbar").addClass('tempHide');
            }
        });

        $('.searchButton').click(function () {
            $('#divCategory1').toggle();
        })

        $(document).click(function (event) {
            $('#divCategory1').hide();
        });
    </script>
